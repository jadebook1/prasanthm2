#!/bin/bash

# Function to execute a SQL query and store the result in a variable
execute_query() {
  local query="$1"
  local result=$(db2 -x "$query")
  echo "$result"
}

# Main script logic
main() {
  # Variables to store accumulated data
  join_tables=""
  join_conditions=""

  # Read the CSV file and process the data
  while IFS=, read -r table1 key_column table2 reference_column
  do
    # Construct the join tables string
    join_tables+=" $table1"

    # Construct the join condition
    join_conditions+=" INNER JOIN $table2 ON $table1.$key_column = $table2.$reference_column"

    echo "Processed tables: $table1, $table2"
  done < your_csv_file.csv

  # Generate the dynamic SQL query
  query="SELECT * FROM $join_tables $join_conditions;"

  # Execute the query
  execute_query "$query"

  echo "Query executed"
}

# Execute the main script
main
